<Window x:Class="arsX.Sol_Explorer.Views.EditCredentialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Credential"
        Height="320" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Site Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="SiteNameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

        <!-- Domain removed -->

        <TextBlock Text="URL:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="UrlTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Username:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Password:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="PasswordBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="OkButton" Content="OK" Width="80" Margin="0,0,8,0"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
